<mah:MetroWindow x:Class="PowerSell.Views.ClientView.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerSell.Views.ClientView"
        mc:Ignorable="d"
       Title="Add Client" Height="300" Width="400">
    <Grid Background="#2C3E50" >
        <StackPanel Margin="10" >
            <TextBlock Text="Name:" Foreground="White" />
            <TextBox x:Name="NameTextBox" Background="White" Foreground="Black"  />

            <TextBlock Text="Phone:" Foreground="White" />
            <TextBox x:Name="PhoneTextBox" Background="White"  Foreground="Black"  />

            <TextBlock Text="Email:" Foreground="White"  />
            <TextBox x:Name="EmailTextBox" Background="White" Foreground="Black"  />

            <Button Content="Save" Click="SaveButton_Click" Margin="5" Background="#3498DB"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>