<Window x:Class="PowerSell.Views.ClientView.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerSell.Views.ClientView"
        mc:Ignorable="d"
       Title="Add Client" Height="300" Width="400">
    <Grid Background="#2C3E50" >
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox x:Name="NameTextBox" />

            <TextBlock Text="Phone:" />
            <TextBox x:Name="PhoneTextBox" />

            <TextBlock Text="Email:" />
            <TextBox x:Name="EmailTextBox" />

            <Button Content="Save" Click="SaveButton_Click" Margin="5" Background="#3498DB"/>
        </StackPanel>
    </Grid>
</Window>