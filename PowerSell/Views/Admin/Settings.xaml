<UserControl x:Class="PowerSell.Views.Admin.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerSell.Views.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Background Options -->
        <StackPanel Margin="20">
            <TextBlock Text="Background Options" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
            <!-- Example: Button to change background -->
            <Button Content="Change Background" Click="ChangeBackground_Click" Margin="0 0 0 10"/>
        </StackPanel>

        <!-- Language Settings -->
        <StackPanel Margin="20">
            <TextBlock Text="Language Settings" FontSize="16" FontWeight="Bold" Margin="0 20 0 10"/>
            <!-- Example: Dropdown to select language -->
            <ComboBox x:Name="LanguageComboBox" SelectionChanged="LanguageComboBox_SelectionChanged">
                <ComboBoxItem Content="English"/>
                <ComboBoxItem Content="Spanish"/>
                <ComboBoxItem Content="French"/>
                <!-- Add more language options as needed -->
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
